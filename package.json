{
  "name": "nsd",
  "version": "0.0.1",
  "private": true,
  "main": "src/main.js",
  "homepage": ".",
  "DEV": true,
  "description": "NoSQL Desktop",
  "author": {
    "name": "Liu",
    "email": "li.usichen@163.com"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/linuxGod/nsd"
  },
  "dependencies": {
    "antd": "^3.26.4",
    "electron-log": "^4.0.3",
    "gulp": "^3.9.1",
    "gulp-merge-json": "^1.3.1",
    "gulp-rimraf": "^0.2.2",
    "iconv-lite": "^0.5.0",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-highlight-words": "^0.16.0",
    "react-intl": "^2.7.2",
    "react-loadable": "^5.5.0",
    "react-redux": "^5.1.1",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "react-scripts": "2.1.1",
    "redis": "^2.8.0",
    "redux": "^4.0.1",
    "redux-immutable-state-invariant": "^2.1.0",
    "redux-thunk": "^2.3.0",
    "run-sequence": "^2.2.1",
    "uuid": "^3.3.2",
    "xlsx": "^0.15.4"
  },
  "scripts": {
    "start": "npm run i18n && react-app-rewired start",
    "estart": "electron .",
    "build": "react-app-rewired build",
    "pack:win32": "electron-builder --win --ia32",
    "pack:win64": "electron-builder --win --x64",
    "pack:dmg": "electron-builder --mac",
    "pack:deb": "electron-builder --linux deb",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "i18n": "gulp i18n-json-merge"
  },
  "jest": {
     "testMatch": ["**/__tests__/**/*.[jt]s?(x)", "**/?(*.)+(spec|test).[jt]s?(x)"],
     "rootDir": "."
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "customize-cra": "^1.0.0",
    "electron": "9.0.5",
    "electron-builder": "^21.2.0",
    "react-app-rewired": "^2.1.6"
  },
  "build": {
    "appId": "com.nsd.liu",
    "productName": "NoSQL Desktop",
    "copyright": "Copyright Â© 2020 NoSQL Desktop",
    "directories": {
      "output": "alpha"
    },
    "asar": true,
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "files": [
      "node_modules/**/*",
      "!src/",
      "!build/static/css/*.css.map",
      "!build/static/js/*.js.map",
      {
        "from": "src",
        "to": "build",
        "filter": "**/*"
      }
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/uninstall.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NoSQL Desktop",
      "license": "./LICENSE"
    },
    "mac": {
      "icon": "build/icon.icns",
      "category": "liu.app.category.type",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "linux": {
      "icon": "build/icon.icns",
      "category": "Utility"
    }
  }
}
